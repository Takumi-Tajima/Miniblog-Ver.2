%ul.list-group.list-group-flush
  - posts.each do |post|
    %li.list-group-item.p-2
      .fs-6
        = link_to user_path(post.user), class: 'text-decoration-none text-body' do
          = post.user.name
      .d-flex.justify-content-between
        = link_to post_path(post), class: 'text-decoration-none text-body' do
          .fs-5
            = post.content
        = render 'posts/follow_btn' , post: post
      .text-sm.text-end.mt-2.text-secondary
        = l post.created_at
        .d-flex.flex-row-reverse.align-items-center
          = render 'posts/like_btn', post: post, liked_post_ids: liked_post_ids
          = link_to post_likes_path(post.id) do
            = post.likes_count
