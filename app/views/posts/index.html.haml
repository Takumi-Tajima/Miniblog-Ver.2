%ul.list-group.list-group-flush
  - @posts.each do |post|
    %li.list-group-item.p-2
      = link_to post_path(post), class: 'text-decoration-none text-body' do
        .fs-6
          = post.user.name
        .d-flex.justify-content-between
          .fs-5
            = post.content
          - if user_signed_in? && current_user != post.user
            -if current_user.following?(post.user)
              = link_to 'フォロー解除', relationships_path(user_id: post.user), class: 'btn btn-danger', data: { turbo_method: :delete }
            - else
              = link_to 'フォローする', relationships_path(user_id: post.user), class: 'btn btn-primary', data: { turbo_method: :post }
        .text-sm.text-end.mt-2.text-secondary
          = l post.created_at
