%ul.list-group.list-group-flush
  - @posts.each do |post|
    %li.list-group-item.p-2
      = link_to post_path(post), class: 'text-decoration-none text-body' do
        .fs-6
          = post.user.name
        .fs-5
          = post.content
        .small.opacity-50.text-end.mt-2
          = l post.created_at
