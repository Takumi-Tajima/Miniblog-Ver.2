.p-4.d-flex.flex-column.justify-content-center.mt-6
  .post-container.p-3
    .image.mb-3
      = image_tag @post.image.variant(:display) if @post.image.attached?
    .mb-3
      = @post.user.name
    .fs-4
      = @post.content
    .text-sm.text-secondary.text-end.mt-2
      = l @post.created_at
  .d-flex.justify-content-between.mt-3
    - if current_user == @post.user
      = link_to '編集', edit_post_path, class: 'btn btn-success'
      = button_to '削除', post_path(@post), method: :delete, class: 'btn btn-danger'
  .container.mt-3
    = render 'posts/comments', comments: @comments, post: @post
    = link_to 'コメントする', new_post_comment_path(@post), class: 'btn btn-success mt-5'
